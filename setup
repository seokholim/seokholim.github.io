if &compatible
  set nocompatible
endif

set history=500

set mouse=a
set number

set ignorecase
set hlsearch
set incsearch
set backspace=eol,start,indent

set expandtab
set shiftwidth=2
set tabstop=2

set ai
set si
filetype indent on
set so=6

set noswapfile

syntax enable
highlight Normal ctermfg=grey ctermbg=black
autocmd vimenter * ++nested colorscheme gruvbox
call plug#begin()
Plug 'morhetz/gruvbox'
call plug#end()


